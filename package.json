{
  "name": "@vaultrice/sdk",
  "description": "A TypeScript/JavaScript SDK for Vaultrice - persistent, encrypted, real-time key-value storage",
  "globalName": "Vaultrice",
  "version": "0.9.10",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/umd/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./cjs": {
      "types": "./types/index.d.ts",
      "default": "./dist/cjs/index.js"
    },
    "./esm": {
      "types": "./types/index.d.ts",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build:deno": "rm -rf dist/deno && cp -r src dist/deno && node scripts/add-ts-extension.js dist/deno",
    "build": "rm -rf dist && rollup -c && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json && rm -rf types && tsc -d --declarationDir types --declarationMap --emitDeclarationOnly && npm run build:deno",
    "lint": "eslint .",
    "prepareDotEnvs": "node scripts/prepare-dot-envs.js",
    "test": "npm run lint && vitest run",
    "test:watch": "npm run lint && vitest",
    "test:integration:local": "vitest --mode integration-local",
    "test:integration:dev": "vitest --mode integration-dev",
    "docs": "typedoc",
    "serve-docs": "http-server docs -o",
    "preversion": "npm run test && npm run build",
    "postversion": "npm run docs && git commit -a -m 'docs update' && git push && git push --tags"
  },
  "author": "The Vaultrice Team <support@vaultrice.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-terser": "0.4.4",
    "@types/node": "24.2.0",
    "dotenv": "17.2.1",
    "eslint": "9.32.0",
    "eslint-plugin-import": "2.32.0",
    "http-server": "14.1.1",
    "mock-socket": "9.3.1",
    "neostandard": "0.12.2",
    "rollup": "4.46.2",
    "rollup-plugin-typescript2": "0.36.0",
    "typedoc": "0.28.9",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "keywords": [
    "vaultrice",
    "storage",
    "encryption",
    "real-time",
    "key-value",
    "persistent",
    "websocket"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vaultrice/sdk.git"
  },
  "homepage": "https://www.vaultrice.com",
  "bugs": {
    "url": "https://github.com/vaultrice/sdk/issues"
  }
}
